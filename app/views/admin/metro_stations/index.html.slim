- model_class = MetroStation

div class="page-header"
  h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
= link_to 'New metro station', new_admin_metro_station_path, :class => 'btn btn-primary'
table class="table table-striped"
  thead
    tr
      th= model_class.human_attribute_name(:id)
      th= model_class.human_attribute_name(:name)
      th= model_class.human_attribute_name(:created_at)
      th=t '.actions', :default => t("helpers.actions")
  tbody
    - @metro_stations.each do |car_brand|
      tr
        td= link_to car_brand.id, admin_metro_station_path(car_brand)
        td= car_brand.name
        td=l car_brand.created_at
        td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_metro_station_path(car_brand), :class => 'btn btn-mini'
          '
          = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_metro_station_path(car_brand), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to 'New metro station', new_admin_metro_station_path, :class => 'btn btn-primary'
